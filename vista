CREATE VIEW vw_medico_paciente_hora AS
SELECT 
    m.nome AS nome_medico,
    p.nome AS nome_paciente,
    c.hora
FROM Consultas c
JOIN Medicos m ON c.codm = m.codm
JOIN Pacientes p ON c.codp = p.codp;



CREATE VIEW vw_consulta_ambulatorio AS
SELECT 
    c.hora,
    a.andar,
    m.codm
FROM Consultas c
JOIN Medicos m ON c.codm = m.codm
JOIN Ambulatorios a ON m.nroa = a.nroa;


CREATE VIEW vw_todos_medicos_consultas AS
SELECT 
    m.nome AS nome_medico,
    c.data,
    c.hora
FROM Medicos m
LEFT JOIN Consultas c ON m.codm = c.codm;


CREATE VIEW vw_paciente_medico_ambulatorio AS
SELECT 
    p.idade,
    p.doenca,
    m.nome AS nome_medico,
    m.nroa AS codigo_ambulatorio
FROM Consultas c
JOIN Pacientes p ON c.codp = p.codp
JOIN Medicos m ON c.codm = m.codm;
